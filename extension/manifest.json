{
  "name": "Skip Antenna",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "アンテナサイトの記事を自動で見つけスキップ",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [ "http://*/*" ],
      "js": ["jquery-1.10.2.min.js", "script.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"    
  },

  "permissions": [
      "tabs", "http://*/*"
  ],
  "web_accessible_resources": ["jquery-1.10.2.min.map"]
}